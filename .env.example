# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
PORT=5000

# Firebase Configuration
# Use relative path (e.g., firbasekey.json in project root)
GOOGLE_APPLICATION_CREDENTIALS=firbasekey.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# WhatsApp Configuration - Choose ONE provider

# Option 1: WATI (https://www.wati.io/)
WATI_API_KEY=your-wati-api-key
WATI_BASE_URL=https://live-server.wati.io
WATI_WEBHOOK_SECRET=your-wati-webhook-secret

# Option 2: WhatsApp Cloud API (https://developers.facebook.com/docs/whatsapp)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=kirana-verify-token-12345

# App Settings
MAX_VOICE_FILE_SIZE=26214400
